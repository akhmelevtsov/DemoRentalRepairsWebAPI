@model Demo.RentalRepairs.WebMvc.Models.PropertyTenantRequestViewModel

@{
    ViewData["Title"] = "Close Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>@ViewData["Title"]</h4>
    <hr />
    <partial name="~/Views/Shared/_RequestDetailsPartial.cshtml" />
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CloseRequest">
            <input asp-for="UnitNumber" type="hidden" />
            <input asp-for="RequestCode" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Close" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Requests">Back to List</a>
</div>
