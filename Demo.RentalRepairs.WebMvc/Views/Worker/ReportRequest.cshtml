@model Demo.RentalRepairs.WebMvc.Models.PropertyTenantRequestViewModel

@{
    ViewData["Title"] = "Submit Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>@ViewData["Title"] </h4>
    <hr />
    <partial name="~/Views/Shared/_RequestDetailsPartial.cshtml" />
</div>


<div class="row">
    <div class="col-md-4">
        <form asp-action="ReportRequest">
            <input asp-for="UnitNumber" type="hidden" />
            <input asp-for="RequestCode" type="hidden" />
            <input asp-for="PropertyCode " type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="checkbox" asp-for="@Model.Success" />
            <label asp-for="@Model.Success">Service work successfully completed</label>


            <div class="form-group">
                <label asp-for="ReportNotes" class="control-label"></label>
                <textarea asp-for="ReportNotes" class="form-control"></textarea>
                <span asp-validation-for="ReportNotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Requests">Back to List</a>
</div>
